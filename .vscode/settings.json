{
  "intelephense.environment.includePaths": [
    "${workspaceFolder}/vendor/php-stubs/wordpress-stubs",
    "${workspaceFolder}/vendor/arifpavel/elementor-stubs"
  ],
  "intelephense.stubs": [
    "apache",
    "bcmath",
    "Core",
    "curl",
    "date",
    "json",
    "mbstring",
    "openssl",
    "PDO",
    "mysql",
    "sqlite3",
    "Phar",
    "Reflection",
    "session",
    "sockets",
    "standard",
    "superglobals",
    "tokenizer",
    "xml",
    "wordpress"
